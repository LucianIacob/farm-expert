<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/calfInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/calf_id"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/calfId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/telegroteskscreen_medium"
                android:gravity="center_horizontal"
                android:importantForAutofill="no"
                android:inputType="text"
                android:lines="1"
                android:maxLength="30"
                android:minWidth="150dp"
                android:textColor="#000080"
                android:textSize="22sp"
                tools:ignore="LabelFor"
                tools:targetApi="o" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/dialogDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/change_date_background"
            android:drawableStart="@drawable/ic_date_range_black_24dp"
            android:fontFamily="@font/telegroteskscreen_medium"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#000080"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/calfInputLayout" />

        <TextView
            android:id="@+id/dialogNoteHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="@string/add_record_note"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialogDate" />

        <Spinner
            android:id="@+id/dialogNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tiny_margin"
            android:entries="@array/birth_notes"
            android:fontFamily="@font/telegroteskscreen_medium"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/dialogNoteHeader"
            app:layout_constraintLeft_toRightOf="@id/dialogNoteHeader"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/dialogNoteHeader" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>