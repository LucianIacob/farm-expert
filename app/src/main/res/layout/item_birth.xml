<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/default_radius"
    app:cardElevation="@dimen/default_elevation"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/birthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/telegroteskscreen_medium"
            android:textColor="@android:color/black"
            android:textSize="@dimen/large_text"
            tools:text="@tools:sample/date/ddmmyy" />

        <LinearLayout
            android:id="@+id/noteContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/noteHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:fontFamily="@font/roboto"
                android:text="@string/note"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/telegroteskscreen_medium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/large_text"
                tools:ignore="RtlSymmetry"
                tools:text="@string/default_birth_note" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/calfIdHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:fontFamily="@font/roboto"
                android:gravity="end"
                android:text="@string/calf_id"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/calfId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/telegroteskscreen_medium"
                android:paddingStart="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/large_text"
                tools:ignore="RtlSymmetry"
                tools:text="@tools:sample/full_names" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/commentsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:fontFamily="@font/roboto"
                android:text="@string/details"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/commentsDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/telegroteskscreen_medium"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                tools:text="@tools:sample/lorem/random[4]" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/updateBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/simple_cell_background"
                android:drawableStart="@drawable/ic_edit_black_24dp"
                android:drawablePadding="5dp"
                android:elevation="@dimen/small_elevation"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/update"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/deleteBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/simple_cell_background"
                android:drawableStart="@drawable/ic_delete_forever_black_24dp"
                android:drawablePadding="5dp"
                android:elevation="@dimen/small_elevation"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/delete"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                tools:targetApi="lollipop" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>