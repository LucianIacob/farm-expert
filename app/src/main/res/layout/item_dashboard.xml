<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_dashboard_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_dashboard_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_dashboard_icon_height"
            android:alpha="0.9"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/dashboard_headcount"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_dashboard_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/allerta"
            android:gravity="center"
            android:lines="1"
            android:paddingTop="@dimen/item_dashboard_text_margin"
            android:paddingBottom="@dimen/item_dashboard_text_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/item_dashboard_title_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_dashboard_icon"
            tools:text="@tools:sample/lorem[1]" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>