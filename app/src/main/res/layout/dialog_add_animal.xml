<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dialogIdHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:hint="@string/animal_id"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <EditText
                    android:id="@+id/dialogId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/telegroteskscreen_medium"
                    android:gravity="center_horizontal"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLength="30"
                    android:minWidth="250dp"
                    android:textColor="#000080"
                    android:textSize="22sp"
                    tools:ignore="LabelFor"
                    tools:targetApi="o"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
                android:id="@+id/dialogDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/change_date_background"
                android:drawableStart="@drawable/ic_date_range_black_24dp"
                android:fontFamily="@font/telegroteskscreen_medium"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textColor="#000080"
                android:textSize="22sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialogIdHeader"/>

        <TextView
                android:id="@+id/dialogGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"
                android:text="@string/genre"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialogDate"/>

        <Spinner
                android:id="@+id/dialogGenreSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:entries="@array/genre_types"
                android:fontFamily="@font/telegroteskscreen_medium"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@id/dialogGenre"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@id/dialogGenre"
                app:layout_constraintTop_toTopOf="@id/dialogGenre"/>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dialogRaceHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"
                android:hint="@string/race"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialogGenreSpinner">

            <EditText
                    android:id="@+id/dialogRace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/telegroteskscreen_medium"
                    android:gravity="center_horizontal"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLength="30"
                    android:minWidth="250dp"
                    android:textColor="#000080"
                    android:textSize="22sp"
                    tools:ignore="LabelFor"
                    tools:targetApi="o"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dialogFatherHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"
                android:hint="@string/father_id"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialogRaceHeader">

            <EditText
                    android:id="@+id/dialogFather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/telegroteskscreen_medium"
                    android:gravity="center_horizontal"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLength="30"
                    android:minWidth="250dp"
                    android:textColor="#000080"
                    android:textSize="22sp"
                    tools:ignore="LabelFor"
                    tools:targetApi="o"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"
                android:hint="@string/mother_id"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialogFatherHeader">

            <EditText
                    android:id="@+id/dialogMother"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/telegroteskscreen_medium"
                    android:gravity="center_horizontal"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLength="30"
                    android:minWidth="250dp"
                    android:textColor="#000080"
                    android:textSize="22sp"
                    tools:ignore="LabelFor"
                    tools:targetApi="o"/>

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>