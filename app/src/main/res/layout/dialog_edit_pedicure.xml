<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="@dimen/medium_margin">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/detailsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/details"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/telegroteskscreen_medium"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:textColor="#000080"
                android:textSize="@dimen/large_text"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="LabelFor"
                tools:targetApi="o" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/actionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@drawable/change_date_background"
            android:drawableStart="@drawable/ic_date_range_black_24dp"
            android:fontFamily="@font/telegroteskscreen_medium"
            android:gravity="center"
            android:padding="@dimen/medium_margin"
            android:textColor="#000080"
            android:textSize="@dimen/large_text"
            app:layout_constraintTop_toBottomOf="@id/detailsHeader" />

        <View
            android:id="@+id/middle_separator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/left_top_hoof_right_nail"
            android:layout_width="@dimen/hoof_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            android:contentDescription="@null"
            android:src="@drawable/right_nail_default"
            app:layout_constraintRight_toLeftOf="@id/middle_separator"
            app:layout_constraintTop_toBottomOf="@id/actionDate" />

        <ImageView
            android:id="@+id/left_top_hoof_left_nail"
            android:layout_width="@dimen/hoof_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/tiny_margin"
            android:contentDescription="@null"
            android:src="@drawable/left_nail_default"
            app:layout_constraintRight_toLeftOf="@id/left_top_hoof_right_nail"
            app:layout_constraintTop_toBottomOf="@id/actionDate" />

        <ImageView
            android:id="@+id/right_top_left_nail"
            android:layout_width="@dimen/hoof_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:contentDescription="@null"
            android:src="@drawable/left_nail_default"
            app:layout_constraintLeft_toRightOf="@id/middle_separator"
            app:layout_constraintTop_toBottomOf="@id/actionDate" />

        <ImageView
            android:id="@+id/right_top_right_nail"
            android:layout_width="@dimen/hoof_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tiny_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:contentDescription="@null"
            android:src="@drawable/right_nail_default"
            app:layout_constraintLeft_toRightOf="@id/right_top_left_nail"
            app:layout_constraintTop_toBottomOf="@id/actionDate" />

        <View
            android:id="@+id/horizontal_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/right_top_left_nail" />

        <ImageView
            android:id="@+id/left_bottom_hoof_right_nail"
            android:layout_width="@dimen/hoof_width"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium_margin"
            android:contentDescription="@null"
            android:src="@drawable/right_nail_default"
            app:layout_constraintRight_toLeftOf="@id/middle_separator"
            app:layout_constraintTop_toBottomOf="@id/horizontal_separator" />

        <ImageView
            android:id="@+id/left_bottom_hoof_left_nail"
            android:layout_width="@dimen/hoof_width"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/tiny_margin"
            android:contentDescription="@null"
            android:src="@drawable/left_nail_default"
            app:layout_constraintRight_toLeftOf="@id/left_bottom_hoof_right_nail"
            app:layout_constraintTop_toBottomOf="@id/horizontal_separator" />

        <ImageView
            android:id="@+id/right_bottom_left_nail"
            android:layout_width="@dimen/hoof_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:contentDescription="@null"
            android:src="@drawable/left_nail_default"
            app:layout_constraintLeft_toRightOf="@id/middle_separator"
            app:layout_constraintTop_toBottomOf="@id/horizontal_separator" />

        <ImageView
            android:id="@+id/right_bottom_right_nail"
            android:layout_width="@dimen/hoof_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tiny_margin"
            android:contentDescription="@null"
            android:src="@drawable/right_nail_default"
            app:layout_constraintLeft_toRightOf="@id/right_bottom_left_nail"
            app:layout_constraintTop_toBottomOf="@id/horizontal_separator" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>