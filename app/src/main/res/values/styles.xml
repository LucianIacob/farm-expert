<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="materialCardViewStyle">@style/FarmExpertCardView</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyTextStyle</item>
    </style>

    <style name="DialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/telegroteskscreen_medium</item>
    </style>

    <style name="DialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="FarmExpertCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">@dimen/default_elevation</item>
        <item name="rippleColor">@color/sea_green</item>
    </style>

    <style name="FarmExpertCardView.DetailScreens">
        <item name="strokeWidth">0.8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="strokeColor">@android:color/darker_gray</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_gravity">bottom|end</item>>
    </style>

    <style name="FarmExpertAppBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleAppearance</item>
        <item name="titleTextAppearance">@style/ToolbarTitleAppearance</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/telegroteskscreen_medium</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/telegroteskscreen_medium</item>
    </style>

    <style name="EmptyTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:text">@string/empty_list</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/cabin_semibold</item>
    </style>

    <style name="FarmExpertInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/tiny_margin</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="FarmExpertInputLayoutStyle.CounterEnabled">
        <item name="counterEnabled">true</item>
    </style>

    <style name="FarmExpertInputLayoutStyle.CounterEnabled.AnimalId">
        <item name="counterMaxLength">@integer/animal_id_max_length</item>
    </style>

    <style name="FarmExpertInputDropdownStype" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginTop">@dimen/tiny_margin</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="FarmExpertEditTextStyle">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/telegroteskscreen_medium</item>
        <item name="android:textColor">#000080</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:importantForAutofill" tools:ignore="NewApi">no</item>
    </style>

    <style name="FarmExpertEditTextStyle.AnimalID">
        <item name="android:maxLength">@integer/animal_id_max_length</item>
        <item name="android:inputType">text</item>
        <item name="android:importantForAutofill" tools:ignore="NewApi">no</item>
    </style>

    <style name="FarmExpertEditTextStyle.NotEditable">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="QuickActionButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="QuickActionButtonStyle.Update">
        <item name="iconTint">@color/colorPrimary</item>
        <item name="android:text">@string/update</item>
        <item name="strokeColor">@color/quick_action_button_update_stroke_color</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="icon">@drawable/ic_edit_black_24dp</item>
    </style>

    <style name="QuickActionButtonStyle.Delete">
        <item name="iconTint">@color/red</item>
        <item name="strokeColor">@color/quick_action_button_delete_stroke_color</item>
        <item name="android:text">@string/delete</item>
        <item name="rippleColor">@android:color/holo_red_dark</item>
        <item name="icon">@drawable/ic_delete_forever_black_24dp</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <style name="FarmExpertTextStyle" parent="Widget.MaterialComponents.TextView">

    </style>

</resources>
